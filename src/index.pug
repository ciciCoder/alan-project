      header {
        //- grid-area: header;
        position: fixed;
        left: 15vw;
        width: 85vw;
        max-width: 85vw;
        height: 100px;
        background: #FFFFFF;
      }
      aside {
        position: fixed;
        color: #FFFFFF;
        width: 15vw;
        max-width: 15vw;
        height: 100vh;
        background: #0996D0;
      }
      main {
        color: black;
        max-width: 85vw;
        width: 85vw;
        margin-top: 100px;
        margin-left: 15vw;
        background: #E2E8EF;
      }
      ul {
        list-style: none;
      }
      li {
        position: relative;
        padding: 10px 0;
      }
      li > span {
        margin-left: 10px;
      }
      .svg-style {
        position: absolute;
        transform: translate(-25px, -4px);
      }
      .dashboard-svg {
        position: absolute;
        transform: translate(-27px, -19px);
        margin-top: 20px;
      }
      li > h1 > strong {
        margin-left: 10px;
      }
      .search {
        position: absolute;
        border-radius: 10px;
        width: 400px;
        height: 20px;
        background: #E2E8EF;
        transform: translate(78px, 10px);
      }
      .search > svg {
        transform: translate(-42px, -3px);
      }
      .notification-bell {
        position: absolute;
        top: 10px;
        right: 327px;
      }
      .name {
        position: absolute;
        right: 133px;
        top: 10px;
      }
      .name-header {
        position: absolute;
        left: 79px;
        top: 56px;
      }
      .name-header > img, .name > img {   
        position: absolute;
        width: 50px;
        height: 41px;
        transform: translate(-52px, -10px);
      }
      .header-btns {
        display: grid;
        position: absolute;
        top: 60px;
        right: 132px;
        width: 400px;
        column-gap: 20px;
        grid-template-columns: auto auto auto;
      }
      .btn {        
        padding: 5px 0;
        color: #FFFFFF;
        border-radius: 19px;
        text-align: center;
        background: #0996D0;
      }
      .boxes {
        display: grid;
        margin-top: 10px;
        gap: 20px;
        grid-template-columns: auto auto;
      }
      .box {
        position: relative;
        padding: 20px;
        border-radius: 5px;
        background: #FFFFFF;
        height: 150px;
        overflow: hidden;
      }
      .box::after {
        position: absolute;
        content: '';
        background: #F1B144;
        top: 0;
        left: 0;
        width: 5px;
        height: 100%;
      }
      .side-boxes {
        display: grid;
        margin-top: 10px;
        height: 100%;
        gap: 20px;
        grid-template-columns: auto;
      }
      .row {
        display: grid;
        gap: 20px;
        padding: 50px;
        grid-template-columns: 80% 20%;
      }
      .col-1 {
      }
      .col-2 .box {
        padding: 25px;
        height: calc(100% - 50px);
        margin: 0;
      }
